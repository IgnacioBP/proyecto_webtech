<p style="color: green"><%= notice %></p>

<h1>Tickets</h1>

<div id="tickets">
  <% @tickets.each do |ticket| %>
     <% if params[:user_mail].present?%>
      <% if ticket.user.mail==params[:user_mail]%>
        <%= render ticket %>
        <%= link_to "Show this ticket", user_ticket_list_ticket_path(params[:user_mail],ticket.ticket_list,ticket) %>
      <%end%>
    <% elsif params[:executive_mail].present?%>
      <% if ticket.executive.mail==params[:executive_mail]%>
        <%= render ticket %>
        <%= link_to "Show this ticket", executive_assign_ticket_ticket_path(params[:executive_mail],ticket.assign_ticket,ticket) %>
      <%end%>
    <%else%>
      <%= render ticket %>
       <% if params[:supervisor_mail].present?%>
        <%= link_to "Show this ticket", supervisor_ticket_path(params[:supervisor_mail],ticket) %>
      <% elsif params[:administrator_mail].present?%>
          <%= link_to "Show this ticket", administrator_ticket_path(params[:administrator_mail],ticket) %>
      <%end%>
    <%end%>

    
    
  <% end %>
</div>

<% if params[:user_mail].present?%>
  <%= link_to "New ticket", new_user_ticket_list_ticket_path(params[:user_mail],params[:ticket_list_id]) %>
  <br>
  <%= link_to "Back to Ticket List", user_ticket_list_path(params[:user_mail],params[:ticket_list_id])%>
<% elsif params[:executive_mail].present?%>
  <%= link_to "New ticket", new_executive_assign_ticket_ticket_path(params[:executive_mail],params[:assign_ticket_id]) %>
  <br>
  <%= link_to "Back to Assign Ticket", executive_assign_ticket_path(params[:executive_mail],params[:assign_ticket_id])%>
<% elsif params[:supervisor_mail].present?%>
  <%= link_to "New ticket", new_supervisor_ticket_path(params[:supervisor_mail]) %>
  <br>
  <%= link_to "Back to Supervisor", supervisor_path(params[:supervisor_mail])%>
<% elsif params[:administrator_mail].present?%>
    <%= link_to "New ticket", new_administrator_ticket_path(params[:administrator_mail]) %>
    <br>
    <%= link_to "Back to Administrator", administrator_path(params[:administrator_mail])%>
<%else%>
  <%= link_to "Back to Home Page", "/"%>
<%end%>

