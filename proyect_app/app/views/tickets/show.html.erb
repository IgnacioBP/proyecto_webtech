<p style="color: green"><%= notice %></p>

<%= render @ticket %>
 <% if params[:executive_mail].present?%>
   <%= link_to "Check Tags", executive_assign_ticket_ticket_tag_lists_path(params[:executive_mail],params[:assign_ticket_id],@ticket) %>
   <br>
   <%= link_to "Check Chat", executive_assign_ticket_ticket_chats_path(params[:executive_mail],params[:assign_ticket_id],@ticket) %>
 <% elsif params[:supervisor_mail].present?%>
  <%= link_to "Check Tags", supervisor_ticket_tag_lists_path(params[:supervisor_mail],@ticket) %>
  <br>
   <%= link_to "Check Chat", supervisor_ticket_chats_path(params[:supervisor_mail],@ticket) %>
 
 <% elsif params[:administrator_mail].present?%>
    <%= link_to "Check Tags", administrator_ticket_tag_lists_path(params[:administrator_mail],@ticket) %>
   <br>
   <%= link_to "Check Chat", administrator_ticket_chats_path(params[:administrator_mail],@ticket) %>
 
 <%end%>


<div>

  <% if params[:user_mail].present?%>
   <%= link_to "Edit this ticket", edit_user_ticket_list_ticket_path(params[:user_mail],@ticket.ticket_list,@ticket) %>
   <br>
   <%= link_to "Back to tickets", user_ticket_list_tickets_path %>
 
  <% elsif params[:executive_mail].present?%>
   <%= link_to "Edit this ticket", edit_executive_assign_ticket_ticket_path(params[:executive_mail],@ticket.assign_ticket,@ticket) %>
   <br>
   <%= link_to "Back to tickets", executive_assign_ticket_tickets_path %>
 <% elsif params[:supervisor_mail].present?%>
  <%= link_to "Edit this ticket", edit_supervisor_ticket_path(params[:supervisor_mail],@ticket) %>
  <br>
   <%= link_to "Back to tickets", supervisor_tickets_path %>
 
 <% elsif params[:administrator_mail].present?%>
    <%= link_to "Edit this ticket", edit_administrator_ticket_path(params[:administrator_mail],@ticket) %>
   <br>
   <%= link_to "Back to tickets", administrator_tickets_path %>
 
 <%end%>

  <%= button_to "Destroy this ticket", @ticket, method: :delete %>
</div>
